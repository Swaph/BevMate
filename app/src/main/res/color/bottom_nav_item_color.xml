<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the item is selected -->
    <item android:color="@color/accentColor" android:state_checked="true"/>

    <!-- State when the item is pressed -->
    <item android:color="@color/primaryLightColor" android:state_pressed="true"/>

    <!-- Default state (unselected and not pressed) -->
    <item android:color="@color/white" android:state_checked="false"/>
</selector>
