<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light gray color when pressed -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF00"/> <!-- Transparent color when not pressed -->
            <corners android:radius="8dp"/>
            <stroke
                android:width="1dp"
                android:color="#DDDDDD"/> <!-- Light gray border -->
        </shape>
    </item>
</selector>
